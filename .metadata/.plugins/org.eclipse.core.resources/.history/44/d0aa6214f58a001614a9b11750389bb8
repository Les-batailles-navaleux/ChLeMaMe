				System.out.println(currentInt);
				// stringLen = stringLen - 1;
				// System.out.println(i);
				double test = pow(2, i);
				currentVal = currentInt * i;
				// multiplier currentChar par i et additionner les valeurs
			// }
		}
		System.out.println(decimalNumber);
	}
