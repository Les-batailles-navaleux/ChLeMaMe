package matrices;

public class MatriceCarree {
	private double [][] matrice;

	public MatriceCarree() {
		this.matrice = new double[0][0];
	}
	
	public MatriceCarree(int d) {
		this.matrice = new double [d][d];
	}
	
	public MatriceCarree(double [][] t) {
		this.matrice = new double [t.length][t.length];
		for (int i = 0; i < t.length; i ++) {
			for (int j = 0; j < t.length; j++) {
				this.matrice[i][j] = t[i][j];
			}
		}
	}

//	Retourne String contenant expression de this 
	public String toString() {
		String stringMatrice = "";
		for(int i = 0; i < matrice.length; i ++) { // objet matrice ref
			for(int j = 0; j < matrice.length; j++) {
				stringMatrice += matrice[i][j]+" "; // ajout espace entre chaque valeur
			}
			stringMatrice += "\n"; // apres chaque i on change de ligne
		}
		return stringMatrice;
    }
	
//	Accesseur en lecture pour l'element d'indices i et j 
	public double elementAt(int i, int j) {
		return(matrice[i][j]);
	}
	
//	Accesseur en ecriture pour l'element d'indices i et j
	public void setElementAt (int i, int j, double v) {
		v = matrice[i][j];
	}
	public static void main(String[] args) {
		double [][] tableau = {{2, 4, 6},{8, 6, 4},{4, 6, 2}};
		MatriceCarree test = new MatriceCarree(tableau);
		
//		Test pour toString 
		System.out.println(test.toString());
		
//		Test pour elementAt
//		System.out.println(test.elementAt(0, 1));

//		Test pour setElementAt 
		System.out.print(test.toString());
	}
	
}
