		int currentVal = 0;
		int decimalNumber = 0; // Var avec resultat
		int stringLen = binaryNumber.length();
		int charInt = Integer.parseInt(binaryNumber); // Convertir chaine en int
		for (int i = 1; i < binaryNumber.length() ; i++) {
			String currentChar = binaryNumber.substring(stringLen - 1, stringLen);
			int currentInt = Integer.parseInt(currentChar);
			// if (currentChar) {
			currentVal =+ currentVal;
				System.out.println(currentChar);
				stringLen = stringLen - 1;
				System.out.println(i);
				currentVal = currentChar * i;
				// multiplier currentChar par i et additionner les valeurs
			// }
		}
		
	}
	public static void main(String[] args) { 
